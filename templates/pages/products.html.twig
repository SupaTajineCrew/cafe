    <h1>Du bon dans vos bouche</h1>
    <br>
    <h2>Les spiritueux !</h2>
    <div class="container  mt-4">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titres</th>
            <th>Descriptions</th>
            <th>Catégories</th>
            <th>Images</th>
        </thead>
        <tbody>
        <!---------------------caroussel----------------------------------------->

            {% for product in products %}
            <div class="carou">
                <div class="slider">
                    <figure class="slider__item"><img class="slider__image"
                                                      src="{{ vich_uploader_asset(product,'imageFile') }}/600/360?image=#{itemsImg}"/>
                        <figcaption class="slider__caption"><td>{{ product.title }}</td>
                            <br><p>{{ product.description }}</p></figcaption>
                    </figure>
                </div>

                <div class="slider__btn"></div>
            </div>
            {% endfor %}
        </tbody>
    </table>
    </div>
    <div class="container">
        <h2>Des bières !</h2> <img src="img/logo/1.png" alt="logo bière" /><img src="img/logo/2.png" alt="logo bière" /><img src="img/logo/3.png" alt="logo bière" />
